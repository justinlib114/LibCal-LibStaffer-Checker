<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Compare Auto Schedule Permutations</title>
  <style>
    body { font-family: Arial, sans-serif; padding: 20px; background: #f8f8f8; }
    h1, h2 { text-align: center; }
    form { text-align: center; margin-bottom: 20px; }
    .comparison-grid {
      display: flex;
      gap: 20px;
      justify-content: space-around;
      flex-wrap: wrap;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 10px;
      background: #fff;
      box-shadow: 0 0 5px rgba(0,0,0,0.1);
    }
    th, td {
      padding: 8px;
      border: 1px solid #ccc;
      text-align: center;
    }
    .column {
      flex: 1 1 30%;
      min-width: 300px;
    }
  </style>
</head>
<body>
  <h1>Compare Auto Schedule Permutations</h1>

  <form method="GET" action="/autoschedule/compare">
    <label>
      Start Date:
      <input type="date" name="start" value="<%= startDate %>">
    </label>
    <label>
      End Date:
      <input type="date" name="end" value="<%= endDate %>">
    </label>
    <button type="submit">Compare</button>
  </form>

  <div class="comparison-grid">
    <div class="column">
      <h2>Rotation</h2>
      <table>
        <thead>
          <tr><th>Date</th><th>Block</th><th>Assigned</th></tr>
        </thead>
        <tbody>
          <% suggestions.rotation.forEach(s => { %>
            <tr>
              <td><%= s.date %></td>
              <td><%= s.block %></td>
              <td><%= s.assigned %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <div class="column">
      <h2>Random</h2>
      <table>
        <thead>
          <tr><th>Date</th><th>Block</th><th>Assigned</th></tr>
        </thead>
        <tbody>
          <% suggestions.random.forEach(s => { %>
            <tr>
              <td><%= s.date %></td>
              <td><%= s.block %></td>
              <td><%= s.assigned %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <div class="column">
      <h2>Round Robin</h2>
      <table>
        <thead>
          <tr><th>Date</th><th>Block</th><th>Assigned</th></tr>
        </thead>
        <tbody>
          <% suggestions.roundrobin.forEach(s => { %>
            <tr>
              <td><%= s.date %></td>
              <td><%= s.block %></td>
              <td><%= s.assigned %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</body>
</html>
