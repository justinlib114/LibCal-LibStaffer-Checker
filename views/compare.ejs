<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Compare Auto Schedule Permutations</title>
  <style>
    body { font-family: Arial, sans-serif; background: #f9f9f9; padding: 20px; }
    h1 { text-align: center; }
    h2 { margin-top: 40px; border-bottom: 2px solid #ccc; padding-bottom: 5px; }
    .container { display: flex; gap: 20px; justify-content: space-around; flex-wrap: wrap; }
    .schedule-table { background: #fff; padding: 15px; border: 1px solid #ddd; border-radius: 5px; width: 100%; max-width: 600px; }
    .day-block { margin-bottom: 30px; }
    table { width: 100%; border-collapse: collapse; margin-top: 10px; }
    th, td { border: 1px solid #ccc; padding: 8px; text-align: center; }
    .fallback { color: red; font-weight: bold; }
  </style>
</head>
<body>

  <h1>Compare Auto Schedule Permutations</h1>
  <p style="text-align: center;">From <strong><%= startDate %></strong> to <strong><%= endDate %></strong></p>

  <div class="container">
    <% Object.entries(suggestions).forEach(([mode, days]) => { %>
      <div class="schedule-table">
        <h2><%= mode.charAt(0).toUpperCase() + mode.slice(1) %></h2>

        <% days.forEach(day => { %>
          <div class="day-block">
            <h3><%= dayjs(day.date).format("dddd, MMMM D, YYYY") %></h3>
            <table>
              <thead>
                <tr>
                  <th>Time Block</th>
                  <th>Assigned</th>
                </tr>
              </thead>
              <tbody>
                <% day.blocks.forEach(b => { %>
                  <tr>
                    <td><%= b.block %></td>
                    <td class="<%= b.isFallback ? 'fallback' : '' %>">
                      <%= b.isFallback ? "⚠️ " : "" %><%= b.assigned %>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        <% }) %>
      </div>
    <% }) %>
  </div>

</body>
</html>
